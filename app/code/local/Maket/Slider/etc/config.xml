<?xml version="1.0"?>
<config>
	<modules>
		<Maket_Slider>
			<version>0.1.0</version>
		</Maket_Slider>
	</modules>
	<frontend>
		<routers>
			<slider>
				<use>standard</use>
				<args>
					<module>Maket_Slider</module>
					<frontName>slider</frontName>
				</args>
			</slider>
		</routers>
		<layout>
			<updates>
				<slider>
					<file>slider.xml</file>
				</slider>
			</updates>
		</layout>
	</frontend>
	<admin>
		<routers>
			<slider>
				<use>admin</use>
				<args>
					<module>Maket_Slider</module>
					<frontName>adminslider</frontName>
				</args>
			</slider>
		</routers>
	</admin>
	<adminhtml>
		<acl>
			<resources>
				<admin>
					<children>
						<slider>
							<title>Menu slider</title>
						</slider>
						<system>
							<children>
								<config>
									<children>
										<slider_section>
											<title>slider</title>
											<sort_order>100</sort_order>
										</slider_section>
									</children>
								</config>
							</children>
						</system>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<slider>
					<file>slider.xml</file>
				</slider>
			</updates>
		</layout>
		<menu>
			<cms>
				<children>
					<slider translate="title" module="adminhtml">
						<title>Slider</title>
						<sort_order>100</sort_order>
						<children>
							<set_time>
								<title>Gestion des sliders</title>
								<action>adminslider/adminhtml_index</action>
							</set_time>
						</children>
					</slider>
				</children>
			</cms>
		</menu>
	</adminhtml>
	<global>
		<models>
			<slider>
				<class>Maket_Slider_Model</class>
				<resourceModel>slider_resource</resourceModel>
			</slider>
			<slider_resource>
				<class>Maket_Slider_Model_Resource</class>
				<entities>
					<slider>
						<table>slider</table>
					</slider>
				</entities>
			</slider_resource>
		</models>
		<resources>
			<slider_setup>
				<setup>
					<module>Maket_Slider</module>
				</setup>
				<connection>
					<use>core_setup</use>
				</connection>
			</slider_setup>
			<slider_read>
				<connection>
					<use>core_read</use>
				</connection>
			</slider_read>
			<slider_write>
				<connection>
					<use>core_write</use>
				</connection>
			</slider_write>
		</resources>
		<helpers>
			<slider>
				<class>Maket_Slider_Helper</class>
			</slider>
		</helpers>
		<blocks>
			<slider>
				<class>Maket_Slider_Block</class>
			</slider>
			<checkout>
				<rewrite>
					<links>Maket_Slider_Block_Links</links>
				</rewrite>
			</checkout>
		</blocks>
	</global>
</config>